<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.Theme.NikeStore" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!--        Primary brand color -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>

        <!--        Secondary brand color-->
        <item name="colorSecondary">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>

        <!--        error color-->
        <item name="colorError">@color/red</item>

        <!--        Surface -->
        <item name="colorOnSurface">@color/black</item>

        <!--        Status bar color-->
        <item name="android:statusBarColor">@color/gray</item>
        <item name="android:windowLightStatusBar">true</item>

        <!--        font -->
        <item name="android:fontFamily">@font/primary_regular</item>
        <item name="fontFamily">@font/primary_regular</item>

        <!--        typography-->
        <item name="textAppearanceHeadline5">@style/TextAppearance.NikeStore.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.NikeStore.Headline6</item>
        <item name="textAppearanceBody1">@style/TextAppearance.NikeStore.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.NikeStore.Body2</item>

        <!--        Bottom navigation -->
        <item name="bottomNavigationStyle">@style/MyBottomNavigation</item>

        <!--        divider color-->
        <item name="dividerColor">@color/gray</item>

        <!--        text color secondary-->
        <item name="android:textColorSecondary">@color/darkGray</item>

        <!--        Appbar layout style-->
        <item name="appBarLayoutStyle">@style/Widget.MaterialComponents.AppBarLayout.Surface</item>

        <item name="android:lineSpacingExtra">6dp</item>

        <item name="android:includeFontPadding">false</item>

        <item name="snackbarStyle">@style/Widget.NikeStore.Snackbar</item>
    </style>
</resources>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NikeStore" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!--        Primary brand color -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>

        <!--        Secondary brand color-->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="windowBackgroundColorSub">@color/gray100</item>
        <item name="favoriteSwipeItemBackground">@color/lightBlack</item>

        <!--        error color-->
        <item name="colorError">@color/red600</item>

        <!--        Surface -->
        <item name="colorOnSurface">@color/black</item>

        <!--        Status bar color-->
        <item name="android:statusBarColor">@color/black</item>

        <!--        font -->
        <item name="android:fontFamily">@font/primary_regular</item>
        <item name="fontFamily">@font/primary_regular</item>

        <!--        typography-->
        <item name="textAppearanceHeadline5">@style/TextAppearance.NikeStore.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.NikeStore.Headline6</item>
        <item name="textAppearanceBody1">@style/TextAppearance.NikeStore.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.NikeStore.Body2</item>

        <!--        Bottom navigation -->
        <item name="bottomNavigationStyle">@style/MyBottomNavigation</item>

        <!--        divider color-->
        <item name="dividerColor">@color/gray</item>
        <item name="cardViewDividerColor">?dividerColor</item>

        <!--        text color secondary-->
        <item name="android:textColorSecondary">@color/gray500</item>

        <!--        Appbar layout style-->
        <item name="appBarLayoutStyle">@style/Widget.MaterialComponents.AppBarLayout.Surface</item>

        <item name="android:lineSpacingExtra">6dp</item>

        <item name="android:includeFontPadding">false</item>

        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="Theme.NikeStore" parent="Base.Theme.NikeStore" />

    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="alertDialogStyle">@style/MaterialAlertDialog.App</item>
    </style>

    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">@dimen/dialogFragmentsCornerRadius</item>
    </style>

    <style name="Theme.Nike.AuthTheme" parent="Base.Theme.NikeStore">
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="colorOnSurface">@color/gray300</item>
        <item name="android:textColorPrimary">?colorOnSurface</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>
</resources>
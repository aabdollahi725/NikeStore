        <!--        <item name="textAppearanceButton">@style/TextAppearance.NikeStore.Button</item>-->
        <!--        <item name="textAppearanceCaption">@style/TextAppearance.NikeStore.Caption</item>-->
        <!--        <item name="textAppearanceOverline">@style/TextAppearance.NikeStore.Overline</item>-->

        <!--        Bottom navigation -->
        <item name="bottomNavigationStyle">@style/MyBottomNavigation</item>

        <!--        divider color-->
        <item name="dividerColor">@color/gray</item>

        <item name="android:textColorSecondary">@color/darkGray</item>
        <item name="android:lineSpacingExtra">6dp</item>
        <item name="android:includeFontPadding">false</item>

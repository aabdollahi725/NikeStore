<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.NikeStore" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!--        Primary brand color -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnPrimary">@color/gray300</item>

        <!--        Secondary brand color-->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="favoriteSwipeItemBackground">@color/lightBlack</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="colorSurface">@color/lightBlack</item>
        <item name="windowBackgroundColorSub">@color/black</item>

        <!--        error color-->
        <item name="colorError">@color/red600</item>

        <!--        Surface -->
        <item name="colorOnSurface">@color/gray300</item>

        <!--        Status bar color-->
        <item name="android:statusBarColor">@color/black</item>

        <!--        font -->
        <item name="android:fontFamily">@font/primary_regular</item>
        <item name="fontFamily">@font/primary_regular</item>

        <!--        typography-->
        <item name="textAppearanceHeadline5">@style/TextAppearance.NikeStore.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.NikeStore.Headline6</item>
        <item name="textAppearanceBody1">@style/TextAppearance.NikeStore.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.NikeStore.Body2</item>

        <!--        Bottom navigation -->
        <item name="bottomNavigationStyle">@style/MyBottomNavigation</item>

        <!--        divider color-->
        <item name="dividerColor">@color/lightBlack</item>
        <item name="cartDividerColor">@color/black</item>

        <!--        text color secondary-->
        <item name="android:textColorSecondary">@color/gray500</item>

        <!--        Appbar layout style-->
        <item name="appBarLayoutStyle">@style/Widget.MaterialComponents.AppBarLayout.Surface</item>

        <item name="android:lineSpacingExtra">6dp</item>

        <item name="android:includeFontPadding">false</item>

        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>
</resources>